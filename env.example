# Base de datos PostgreSQL (requerido)
DATABASE_URL="postgresql://usuario:contraseña@host:puerto/nombre_bd?schema=public"

# JWT Secret (requerido - generar una clave segura)
JWT_SECRET="tu-jwt-secret-super-seguro-aqui"

# URL de la aplicación (para producción)
NEXTAUTH_URL="https://tu-app.vercel.app"

# NextAuth Secret (opcional)
NEXTAUTH_SECRET="tu-nextauth-secret-aqui"

# Configuración de Prisma
PRISMA_GENERATE_DATAPROXY="false"

# Variables de entorno para Vercel
VERCEL="1"
VERCEL_ENV="production"

# UploadThing (requerido para subida de imágenes)
UPLOADTHING_SECRET="tu-uploadthing-secret-aqui"
UPLOADTHING_TOKEN="tu-uploadthing-token-aqui"
NEXT_PUBLIC_UPLOADTHING_TOKEN="tu-uploadthing-token-aqui"